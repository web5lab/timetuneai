<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="VirtualCallTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/splash_background</item>
        <item name="android:statusBarColor">@color/splash_background</item>
        <item name="android:navigationBarColor">@color/splash_background</item>
        <item name="android:windowShowWhenLocked">true</item>
        <item name="android:windowTurnScreenOn">true</item>
        <item name="android:windowKeepScreenOn">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>
</resources>